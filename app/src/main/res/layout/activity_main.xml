<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="@color/backgroundcolor"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <LinearLayout
              android:clipToPadding="false"
              android:gravity="center"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <androidx.cardview.widget.CardView
                  android:id="@+id/menuUser"
                  android:foreground="?android:attr/selectableItemBackground"
                  android:clickable="true"
                  android:layout_width="160dp"
                  android:layout_height="190dp"
                  android:layout_margin="10dp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center">
                      <ImageView
                          android:layout_width="64dp"
                          android:layout_height="64dp"
                          android:background="@drawable/cerclebackgroundpurple"
                          android:src="@drawable/ic_person_black_24dp"
                          android:padding="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:layout_marginTop="10dp"
                          android:text="User"/>
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="@color/lightgray"
                          android:layout_margin="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="Isi Biodata"
                          android:padding="5dp"
                          android:textColor="@android:color/darker_gray"/>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:id="@+id/menuIndexMassaTubuh"
                  android:foreground="?android:attr/selectableItemBackground"
                  android:clickable="true"
                  android:layout_width="160dp"
                  android:layout_height="190dp"
                  android:layout_margin="10dp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center">
                      <ImageView
                          android:layout_width="64dp"
                          android:layout_height="64dp"
                          android:background="@drawable/cerclebackgroundpink"
                          android:src="@drawable/ic_av_timer_black_24dp"
                          android:padding="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:layout_marginTop="10dp"
                          android:text="IMT"/>
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="@color/lightgray"
                          android:layout_margin="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="Menghitung IMT"
                          android:padding="5dp"
                          android:textColor="@android:color/darker_gray"/>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>


          </LinearLayout>

          <LinearLayout
              android:clipToPadding="false"
              android:gravity="center"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <androidx.cardview.widget.CardView
                  android:id="@+id/menuRiwayatSakit"
                  android:foreground="?android:attr/selectableItemBackground"
                  android:clickable="true"
                  android:layout_width="160dp"
                  android:layout_height="190dp"
                  android:layout_margin="10dp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center">
                      <ImageView
                          android:layout_width="64dp"
                          android:layout_height="64dp"
                          android:background="@drawable/cerclebackgroundgreen"
                          android:src="@drawable/ic_adb_black_24dp"
                          android:padding="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:layout_marginTop="10dp"
                          android:text="Riwayat Penyakit"/>
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="@color/lightgray"
                          android:layout_margin="10dp"/>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:padding="5dp"
                          android:text="Isi Riwayat Penyakit"
                          android:textColor="@android:color/darker_gray" />
                  </LinearLayout>

              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:id="@+id/menuKeteranganAktifitas"
                  android:foreground="?android:attr/selectableItemBackground"
                  android:clickable="true"
                  android:layout_width="160dp"
                  android:layout_height="190dp"
                  android:layout_margin="10dp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center">
                      <ImageView
                          android:layout_width="64dp"
                          android:layout_height="64dp"
                          android:background="@drawable/cerclebackgroundyello"
                          android:src="@drawable/ic_directions_run_black_24dp"
                          android:padding="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:layout_marginTop="10dp"
                          android:text="Pola Hidup"/>
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="@color/lightgray"
                          android:layout_margin="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="Lama Beraktivitas"
                          android:padding="5dp"
                          android:textColor="@android:color/darker_gray"/>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>


          </LinearLayout>

          <LinearLayout
              android:clipToPadding="false"
              android:gravity="center"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <androidx.cardview.widget.CardView
                  android:id="@+id/menuDiet"
                  android:foreground="?android:attr/selectableItemBackground"
                  android:clickable="true"
                  android:layout_width="340dp"
                  android:layout_height="150dp"
                  android:layout_margin="10dp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center">
                      <ImageView
                          android:layout_width="64dp"
                          android:layout_height="64dp"
                          android:background="@drawable/cerclebackgroundpurple"
                          android:src="@drawable/ic_free_breakfast_black_24dp"
                          android:padding="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:layout_marginTop="10dp"
                          android:text="Riwayat Diet"/>
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="@color/lightgray"
                          android:layout_margin="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="Makanan yang Dikonsumsi"
                          android:padding="5dp"
                          android:textColor="@android:color/darker_gray"/>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>

          </LinearLayout>

      </LinearLayout>

    </ScrollView>



</LinearLayout>
